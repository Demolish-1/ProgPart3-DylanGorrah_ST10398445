<Page x:Class="CyberSecurityChatbotUI.ChatbotPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Cyber Security Chatbot"
      Background="#FF0F0F23">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1E1E3F" Padding="10">
            <TextBlock Text="Cyber Security Chatbot" 
                       Foreground="Magenta" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Chat Display -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="ChatDisplay" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap" 
                     FontFamily="Consolas"
                     Foreground="White"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalScrollBarVisibility="Disabled"
                     Padding="10"/>
        </ScrollViewer>

        <!-- Input Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="UserInput" 
                     Grid.Column="0" 
                     Margin="0,0,10,0"
                     Foreground="White"
                     Background="#FF252550"
                     BorderBrush="Magenta"
                     KeyDown="UserInput_KeyDown"/>

            <Button x:Name="SendButton" 
                    Grid.Column="1" 
                    Content="Send" 
                    Padding="15,5"
                    Background="Magenta"
                    Foreground="White"
                    Click="SendButton_Click"/>
        </Grid>

        <!-- Footer -->
        <Button Grid.Row="3" 
                Content="Back to Menu" 
                HorizontalAlignment="Center" 
                Margin="10"
                Padding="15,5"
                Background="#FF1E1E3F"
                Foreground="White"
                Click="BackButton_Click"/>
    </Grid>
</Page>